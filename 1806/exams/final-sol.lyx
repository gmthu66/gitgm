\begin_inset Formula 
\[
(A|b)=\left(\begin{array}{cccc|c}
1 & 0 & -1 & 1 & 3\\
2 & 1 & -3 & 4 & 9\\
1 & -2 & 1 & -4 & -4
\end{array}\right)\rightarrow\left(\begin{array}{cccc|c}
